
{% extends 'layout.html.twig' %}



{% block content %}
    <div class="container">
        <div class="row">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        Administração de Funcionarios
                    </h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12">
                            <a href="{{ route('funcionario.new') }}" class="btn btn-success">
                                <span class="glyphicon glyphicon-plus"></span>
                            </a>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table table-bordered">
                                <thead>
                                <tr>
                                    <th style="width: 10px">#</th>
                                    <th>Nome</th>
                                    <th>Endereco</th>
                                    <th>CPF</th>
                                    <th>Cargo</th>
                                    <th>Ações</th>
                                </tr>
                                </thead>
                                <tbody>

                                {% for funcionario in funcionarios%}

                                    <tr>
                                        <td>{{ funcionario.id }}</td>
                                        <td>{{ funcionario.first_name ~ funcionario.last_name }}</td>
                                        <td>{{ funcionario.endereco }}</td>
                                        <td>{{ funcionario.cpf }}</td>
                                        <td>{{ funcionario.categoryFunction.name }}</td>
                                        <td>
                                            <a href="{{ route('funcionario.edit', {'id' : funcionario.id}) }}">
                                                <span class="glyphicon glyphicon-pencil"></span>
                                            </a>
                                            |
                                            <a href="{{ route('funcionario.show', {'id' : funcionario.id}) }}">
                                                <span class="glyphicon glyphicon-remove"></span>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}