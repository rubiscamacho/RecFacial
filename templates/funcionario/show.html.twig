
{% extends 'layout.html.twig'  %}



{% block content %}

    <div class="container">

        <div class="row">

            <div class="panel panel-primary">

                <div class="panel-heading">

                    <h3 class="panel-title">

                        Ver Funcionarios

                    </h3>

                </div>

                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12">
                        <a href="{{ route('funcionario.edit', {'id' : funcionario.id}) }}"
                        class="btn btn-primary">
                            <span class="glyphicon glyphicon-pencil"></span>
                        </a>

                        <a href="{{ route('funcionario.delete', {'id' : funcionario.id}) }}"
                        class="btn btn-danger" >
                            <span class="glyphicon glyphicon-remove"></span>
                        </a>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-md-12">
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <td scope="row">#</td>
                                <td>{{ funcionario.id }}</td>

                            </tr>
                            <tr>
                                <td scope="row">Cargo:</td>
                                <td>{{ funcionario.categoryFunction.name }}</td>

                            </tr>
                            <tr>
                                <td scope="row">Nome:</td>
                                <td>{{ funcionario.first_name }}</td>

                            </tr>
                            <tr>
                                <td scope="row">Sobrenome:</td>
                                <td>{{ funcionario.last_name }}</td>

                            </tr>
                            <tr>
                                <td scope="row">Endereco:</td>
                                <td>{{ funcionario.endereco }}</td>

                            </tr>
                            <tr>
                                <td scope="row">CPF:</td>
                                <td>{{ funcionario.cpf }}</td>

                            </tr>
                        </tbody>
                    </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}